<h1>Burgers!</h1>

<h2>Eat Da Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{id}}{{burger_name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{id}}{{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>
