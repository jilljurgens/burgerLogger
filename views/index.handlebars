<div class = transbox>
  <h1>Eat Da Burgers!</h1>
  <div class = readyToEat>
    <h2>Burgers ready to Devour!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{id}}   {{burger_name}}
            <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
           Devour!
             </button>
             <br>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class = alreadyEaten>
    <h2>Burgers Devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{id}}   {{burger_name}}
          <br>
        {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class = clearfix>
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burgerName">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>