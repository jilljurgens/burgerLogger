<div class = transbox>
<h1>Eat Da Burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{id}}   {{burger_name}}
        <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
       Devour!
         </button>
         <br>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{id}}   {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>
